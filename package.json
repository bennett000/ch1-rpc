{
  "name": "rpc",
  "description": "JavaScript Remote Procedure Call (RPC)",
  "keywords": [
    "rpc",
    "remote",
    "procedure",
    "call",
    "parallel",
    "worker",
    "socket",
    "socket.io",
    "webworker",
    "postMessage"
  ],
  "version": "1.0.0",
  "author": {
    "name": "Michael J. Bennett",
    "email": "dev@michaeljbennett.info",
    "url": "https://michaeljbennett.info"
  },
  "contributors": [],
  "license": "LGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bennett000/js-rpc"
  },
  "homepage": "https://github.com/bennett000/js-rpc",
  "bugs": {
    "url": "https://github.com/bennett000/js-rpc/issues"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "main": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "prebuild": "yarn cleanAndTest",
    "build": "yarn tsc && yarn package-data && yarn docs",
    "clean": "yarn clean:docs && yarn clean:cover && yarn clean:dist",
    "clean:cover": "rimraf ./coverage",
    "clean:docs": "rimraf ./docs",
    "clean:dist": "rimraf ./dist",
    "cleanAndTest": "yarn clean && yarn test",
    "docs": "yarn typedoc",
    "lint": "yarn lint-ts",
    "lint-ts": "tslint ./src/**/*.ts",
    "package-data": "node ./src/packages/generate-package-docs.js",
    "precommit": "lint-staged",
    "pretest": "rimraf coverage/ && yarn lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -p ./tsconfig.build.json",
    "typedoc": "typedoc --name 'js-rpc' --readme README-docs.md --includeDeclarations --externalPattern '!(src/**/*.ts)' --exclude '+(*.js|**/index.ts|node_modules/**/*|dist/**/*|dist/**/*|**/*.spec.*|**/*/spec*)' --ignoreCompilerErrors --target es6 --out docs ./src"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "connect": "~3.5.0",
    "express": "~4.14.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "rimraf": "^2.5.2",
    "socket.io": "^1.4.8",
    "ts-helpers": "^1.1.1",
    "ts-jest": "^22.4.6",
    "tslint": "^3.11.0",
    "typedoc": "^0.4.4",
    "typescript": "^2.0.3"
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/interfaces.ts"
    ],
    "coverageDirectory": "coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "modulePathIgnorePatterns": [
      "/coverage/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
